<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="USER">
	<resultMap id="user" type="com.simplegame.platform.bus.user.entity.User">
		<result property="id" column="id" />
		<result property="account" column="account" />
		<result property="password" column="password" />
		<result property="createTime" column="create_time" />
	</resultMap>
	
	<sql id="queryConditionAccount">
		<where>
			<if test="id != null">AND id = #{id}</if>
			<if test="account != null">AND account = #{account}</if>
			<if test="password != null">AND password = #{password}</if>
		</where>
	</sql>
	
	<select id="selectUserById" resultMap="user" parameterType="String">
		select
		id
		,account
		,password
		,create_time
		from user where id = #{id}
	</select>
	
	<select id="selectUserByAccount" resultMap="user" parameterType="String">
		select
		id
		,account
		,password
		,create_time
		from user where account = #{account}
	</select>
	
	
	<select id="selectUserByAccountAndPassword" resultMap="user" parameterType="com.simplegame.platform.bus.user.entity.User">
		select
		id
		,account
		,password
		,create_time
		from user
		<include refid="queryConditionAccount"/>
	</select>
	
	<insert id="insertUser" parameterType="com.simplegame.platform.bus.user.entity.User">
		insert into user(id, account, password, create_time)
		
		values(#{id}, #{account}, #{password}, #{createTime})
	</insert>

	<update id="updateUser" parameterType="com.simplegame.platform.bus.user.entity.User">
		update user set
	    password = #{password}
	    
	    where id = #{id}
	</update>

</mapper>
	